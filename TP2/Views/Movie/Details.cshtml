@model TP2.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre!.Name)
        </dd>
        <dt class="col-sm-2">
            Date Added
        </dt>
        <dd class="col-sm-10">
            @if (Model.DateAdded.HasValue)
            {
                @Model.DateAdded.Value.ToString("dd/MM/yyyy HH:mm")
            }
            else
            {
                <span class="text-muted">N/A</span>
            }
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageFile))
            {
                <img src="~/images/@Model.ImageFile" alt="@Model.Name" class="img-fluid"
                    style="max-width: 400px; height: auto;" />
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>