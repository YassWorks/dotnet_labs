@model IEnumerable<TP2.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label for="filterTable" class="form-label">Filter by Table</label>
                <input type="text" class="form-control" id="filterTable" name="filterTable" value="@ViewData["CurrentFilterTable"]" />
            </div>
            <div class="col-md-3">
                <label for="filterAction" class="form-label">Filter by Action</label>
                <select class="form-select" id="filterAction" name="filterAction">
                    <option value="">All Actions</option>
                    <option value="Added" selected="@(ViewData["CurrentFilterAction"]?.ToString() == "Added")">Added</option>
                    <option value="Modified" selected="@(ViewData["CurrentFilterAction"]?.ToString() == "Modified")">Modified</option>
                    <option value="Deleted" selected="@(ViewData["CurrentFilterAction"]?.ToString() == "Deleted")">Deleted</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filter</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-filterTable="@ViewData["CurrentFilterTable"]" asp-route-filterAction="@ViewData["CurrentFilterAction"]">
                    Date
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TableSortParm"]" asp-route-filterTable="@ViewData["CurrentFilterTable"]" asp-route-filterAction="@ViewData["CurrentFilterAction"]">
                    Table Name
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ActionSortParm"]" asp-route-filterTable="@ViewData["CurrentFilterTable"]" asp-route-filterAction="@ViewData["CurrentFilterAction"]">
                    Action
                </a>
            </th>
            <th>Entity Key</th>
            <th>Changes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.TableName</td>
                <td>
                    @if (item.Action == "Added")
                    {
                        <span class="badge bg-success">@item.Action</span>
                    }
                    else if (item.Action == "Modified")
                    {
                        <span class="badge bg-warning text-dark">@item.Action</span>
                    }
                    else if (item.Action == "Deleted")
                    {
                        <span class="badge bg-danger">@item.Action</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Action</span>
                    }
                </td>
                <td>@item.EntityKey</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Changes))
                    {
                        <span class="text-truncate d-inline-block" style="max-width: 300px;" title="@item.Changes">
                            @item.Changes
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">No changes</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Any())
{
    <nav aria-label="Audit log pagination">
        <ul class="pagination justify-content-center">
            @{
                var currentPage = (int)ViewData["CurrentPage"]!;
                var totalPages = (int)ViewData["TotalPages"]!;
                var filterTable = ViewData["CurrentFilterTable"]?.ToString();
                var filterAction = ViewData["CurrentFilterAction"]?.ToString();
                var sortOrder = ViewData["CurrentSort"]?.ToString();
            }

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-sortOrder="@sortOrder" asp-route-filterTable="@filterTable" asp-route-filterAction="@filterAction">Previous</a>
            </li>

            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@sortOrder" asp-route-filterTable="@filterTable" asp-route-filterAction="@filterAction">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-sortOrder="@sortOrder" asp-route-filterTable="@filterTable" asp-route-filterAction="@filterAction">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info" role="alert">
        No audit logs found. Audit logs will appear here as you make changes to the database.
    </div>
}
